<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Help to Coding, http://mr-brain.github.io/2023/01/20/2023/01/T1SourceGenerator/</Description>
    <Copyright>2023</Copyright>
    <PackageLicenseUrl>MIT</PackageLicenseUrl>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <LangVersion>11</LangVersion>
    <PackageVersion>1.0.2</PackageVersion>
    <IsRoslynComponent>true</IsRoslynComponent>
    <PackageReleaseNotes>add AutoMapping, WebApi Client</PackageReleaseNotes>
    <PackageLicense>https://opensource.org/licenses/MIT</PackageLicense>
    <PackageReadmeFile>ReadMe.md</PackageReadmeFile>
    <Title>T1.SourceGenerator</Title>
    <Authors>Mr.Brain</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.4.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(OutputPath)\T1.SourceGenerator.Attributes.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(OutputPath)\T1.SourceGenerator.Attributes.dll" Pack="true" PackagePath="lib\netstandard2.0" Visible="true" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\T1.SourceGenerator.Attributes\T1.SourceGenerator.Attributes.csproj" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\T1.SourceGenerator.Attributes\AutoMappingAttribute.cs">
      <Link>Templates\AutoMappingAttribute.cs</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\T1.SourceGenerator.Attributes\AutoGeneratedHeader.cs">
      <Link>Templates\AutoGeneratedHeader.cs</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\T1.SourceGenerator.Attributes\WebApiClientAttribute.cs">
      <Link>Templates\WebApiClientAttribute.cs</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\T1.SourceGenerator.Attributes\WebApiClient.cs">
      <Link>Templates\WebApiClient.cs</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\T1.SourceGenerator.Attributes\WebApiClientConstructorInjectAttribute.cs">
      <Link>Templates\WebApiClientConstructorInjectAttribute.cs</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="ReadMe.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
