<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>let SlackNet more easy</Description>
        <Copyright>2024</Copyright>
        <License>https://choosealicense.com/licenses/mit/</License>
        <AssemblyVersion>1.0.10</AssemblyVersion>
        <FileVersion>1.0.10</FileVersion>
        <Version>1.0.10</Version>
        <PackageReleaseNotes>add limit</PackageReleaseNotes>
        <PackageReadmeFile>ReadMe.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.2" />
      <PackageReference Include="SlackNet" Version="0.13.3" />
      <PackageReference Include="T1.Standard" Version="1.0.81" />
    </ItemGroup>

    <ItemGroup>
      <None Include="ReadMe.md" Pack="true" PackagePath="/" />
      <None Include="LICENSE" Pack="true" PackagePath="/" />
    </ItemGroup>

</Project>
