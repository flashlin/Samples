{
   "compilerOptions": {
      "noEmit": true,
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
         "@/*": [
            "src/*"
         ]
      },
      "lib": [
         "esnext",
         "dom",
         "dom.iterable",
         "scripthost"
      ],
      "types": [
         "node"
      ]
   },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
