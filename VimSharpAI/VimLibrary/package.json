{
  "name": "vim-library",
  "version": "1.0.0",
  "description": "A TypeScript Web Component Library for VimFront",
  "type": "module",
  "main": "./dist/vim-library.umd.js",
  "module": "./dist/vim-library.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vim-library.es.js",
      "require": "./dist/vim-library.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "pnpm clean && pnpm build",
    "prepublishOnly": "pnpm rebuild"
  },
  "keywords": [
    "web-components",
    "typescript",
    "vim",
    "component-library"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/node": "^24.6.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4"
  }
}
