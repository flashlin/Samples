{
   "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "allowJs": true,
      "checkJs": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "noEmit": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
   },
   "exclude": [
      "node_modules",
      "dist",
      "build"
   ],
   "include": [
      "./src/**/*"
   ]
}