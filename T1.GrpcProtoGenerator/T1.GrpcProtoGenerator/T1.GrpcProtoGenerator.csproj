<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>preview</LangVersion>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
    
    <!-- NuGet Package Configuration -->
    <PackageId>T1.GrpcProtoGenerator</PackageId>
    <Version>1.0.2</Version>
    <Authors>T1 Development Team</Authors>
    <Company>T1</Company>
    <Product>T1 gRPC Proto Generator</Product>
    <Description>A C# source generator that creates clean SDK wrappers from .proto files for gRPC services. Simplifies gRPC client usage by generating strongly-typed wrapper classes.</Description>
    <PackageTags>grpc;protobuf;source-generator;roslyn;sdk;wrapper;code-generation</PackageTags>
    <PackageProjectUrl>https://github.com/your-username/T1.GrpcProtoGenerator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/your-username/T1.GrpcProtoGenerator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>update document</PackageReleaseNotes>
    <Copyright>Copyright (c) 2025 T1 Development Team</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    
    <!-- Source Generator Configuration -->
    <RootNamespace>T1.GrpcProtoGenerator</RootNamespace>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IsRoslynComponent>true</IsRoslynComponent>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
