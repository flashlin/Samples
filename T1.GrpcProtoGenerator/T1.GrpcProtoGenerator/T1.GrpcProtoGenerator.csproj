<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
    <PackageId>T1.GrpcProtoGenerator</PackageId>
    <Description>Generates C# clean SDK wrappers from .proto files</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RootNamespace>T1.GrpcProtoGenerator</RootNamespace>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.9.2" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Protos\*.proto" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\..\T1.Standard\T1.Standard\Extensions\RegexPattern.cs">
      <Link>Common\RegexPattern.cs</Link>
    </Compile>
    <Compile Include="..\..\..\T1.Standard\T1.Standard\Extensions\StreamReaderExtensions.cs">
      <Link>Common\StreamReaderExtensions.cs</Link>
    </Compile>
    <Compile Include="..\..\..\T1.Standard\T1.Standard\Extensions\StringExtension.cs">
      <Link>Common\StringExtension.cs</Link>
    </Compile>
    <Compile Include="..\..\..\T1.Standard\T1.Standard\Extensions\TypeExtension.cs">
      <Link>Common\TypeExtension.cs</Link>
    </Compile>
    <Compile Include="..\..\..\T1.Standard\T1.Standard\IO\IndentStringBuilder.cs">
      <Link>Common\IndentStringBuilder.cs</Link>
    </Compile>
    <Compile Include="..\..\..\T1.Standard\T1.Standard\IO\StringTemplate.cs">
      <Link>Common\StringTemplate.cs</Link>
    </Compile>
  </ItemGroup>


</Project>
