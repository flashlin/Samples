{
    "compilerOptions": {
      "target": "es5",
      "module": "ES2022",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "declarationMap": true,                /* Generates a sourcemap for each corresponding '.d.ts' file. */
      "sourceMap": true,  
      "allowArbitraryExtensions": true,
      "lib": [
        "es5",
        "dom",
        "es2015",
        "es2015.collection"],   
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
  }
  